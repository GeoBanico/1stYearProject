        <Button Name="btnlogin" Content="Log-In" HorizontalAlignment="Left" Margin="209,142,0,0" VerticalAlignment="Top" Width="75" Click="btnlogin_Click"/>
        <Button Name="btnexit" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="289,142,0,0" Click="btnexit_Click" />
        <PasswordBox Name="txtpass" HorizontalAlignment="Left" Margin="234,72,0,0" VerticalAlignment="Top" Width="130" Height="25"/>


    </Grid>
</Window>
